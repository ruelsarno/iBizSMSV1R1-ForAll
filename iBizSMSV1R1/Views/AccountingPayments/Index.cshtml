@model IEnumerable<iBizSMSV1R1.Models.Payment>

@{
    ViewData["Title"] = "List Of Payments";
    Layout = "~/Views/Shared/_LayoutAccountingAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <span id="headers" class="container Headers-Reverse">@ViewData["Title"]</span>
        </div>
        <div class="col-sm-6 text-end">
            
        </div>
    </div>
</div>
<div class="Form-Body">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.recno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.referenceno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.schoolyear)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.billnames)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.billdate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.paymentdate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.paymenttypes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.paymentoffices)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.amountpaid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.paymentpostdate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.recno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.referenceno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.schoolyear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.billnames)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.billdate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.paymentdate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.paymenttypes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.paymentoffices)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.amountpaid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.paymentpostdate)
                    </td>
                    <td>
                        <a class="btn btn-warning button-small" asp-action="Edit" asp-route-id="@item.recordno">View Payment Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>