@using iBizSMSV1R1.Controllers

@{
    var webpages = HomeController.getAbout();
    var title = "";
    var tagline = "";
    var description = "";
    var controller = "";
    var action = "";
    var base64 = "";
    var imgSrc = "";

    //string imagelink = "";

    foreach (var item in webpages)
    {
        if (item.image != null)
        {
            base64 = Convert.ToBase64String(item.image);
        }
        imgSrc = String.Format("data:image/gif;base64,{0}", base64);
        title = item.title;
        tagline = item.tagline;
        description = item.description;
        action = item.action;
        controller = item.controller;
        @*<img src='@imgSrc' style="max-width:300px;" alt="Upload Photo" title="Change Profile Photo" />*@
        break;
    }
}

<div class="container">
    <div class="row align-items-center">
        <div class="col-md-5 order-1 order-md-1 mb-4 mb-md-0">
            <img class="img-fluid w-100" src="@imgSrc" alt="about image">
        </div>
        <div class="col-md-7 order-2 order-md-2">
            <div class="row">
                <div class="col-sm-12">
                    <h2 class="section-title">@tagline</h2>
                </div>
                <div class="col-sm-12">
                    @Html.Raw(description)
                </div>
                <div class="col-sm-12">
                    <a asp-controller="@controller" asp-action="@action" class="btn btn-primary-outline">Learn more</a>
                </div>
            </div>
        </div>
    </div>
</div>