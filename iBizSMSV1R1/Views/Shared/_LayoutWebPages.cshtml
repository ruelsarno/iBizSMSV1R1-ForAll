<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] School Name Here...</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/css/menu.css" rel="stylesheet" />
    <link href="~/css/common.css" rel="stylesheet" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/cvq6ik3n5sck77hdj00cfa3ifvcisdcwed1okb7pj318mkiw/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
</head>
@{ 
    var SCHOOLName = "School Name Here...";
}
<body>
    <header>
        <div class="container-fluid mt-4">
            <div class="row">
                <div class="col-sm-1">
                    @*<a class="navbar-brand" href="javascript:void(0)">School Name Here...</a>*@
                    <a class="" asp-area="" asp-controller="Home" asp-action="Index" style="color:firebrick;font-size:larger">
                        <img id="logo" class="logo" src="~/images/logo.png" alt="PEREGRINE iNSTITUTE" />
                    </a>
                </div>
                <div class="col-sm-11">
                    <div class="row">
                        <div class="col-sm-12">
                            <h4 class="Header-Main">WELCOME TO @SCHOOLName STUDENT PORTAL</h4>
                        </div>
                        <div class="col-sm-12">
                            <partial name="_MenuWebApp" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </header>
    <hr />
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            @*&copy; 2020 - iBizSMSV1R1 - <a asp-area="" asp-controller="Home" asp-action="Privacy"></a>*@
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/bs5/js/bootstrap.min.js"></script>
    <script src="~/bs5/js/bootstrap.bundle.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
            toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
            toolbar_mode: 'floating',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
