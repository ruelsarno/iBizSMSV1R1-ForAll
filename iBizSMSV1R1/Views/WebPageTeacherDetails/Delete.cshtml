}

<div class="container">
    <h6 id="module-views">@ViewData["Title"] : </h6>
</div>
<hr />
<span class="remove-item">Are you sure you want to delete this?</span>
<div class="Form-Body">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.recno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.recno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.jobdescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.jobdescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.biography)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.biography)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.hobbiesinterest)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.hobbiesinterest)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.contactinfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.contactinfo)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="recordno" />
        <input type="submit" value="Delete" class="btn btn-danger button-small" /> |
        <a asp-action="Index" asp-route-recno="@Model.recno" class="btn btn-primary button-small">Cancel</a>
    </form>
</div>