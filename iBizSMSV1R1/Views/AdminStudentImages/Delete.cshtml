@model iBizSMSV1R1.Models.StudentImage

@{
    ViewData["Title"] = "Remove Student Image";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";    
    var id = ViewBag.ID;
}

<div class="container">
    <h6 id="module-views">@ViewData["Title"] : </h6>
</div>
<hr />
<span class="remove-item">Are you sure you want to delete this?</span>
<div class="Form-Body">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.link)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.link)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.image)
        </dt>
        <dd class="col-sm-10">
            @{
                var base64 = Convert.ToBase64String(Model.image);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);    //For QRCODE
            }

            <img src='@imgSrc' style="max-width:300px;" title="Click to Download" />

        </dd>
    </dl>

    <form asp-action="Delete">       
        <input type="submit" value="Delete" class="btn btn-danger button-small" /> |
        <a asp-action="Index" class="btn btn-warning button-small" asp-route-id="@Model.id">Cancel</a>
    </form>
</div>
