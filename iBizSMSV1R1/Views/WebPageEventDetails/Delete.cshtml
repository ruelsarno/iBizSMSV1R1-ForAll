@model iBizSMSV1R1.Models.WebPageEventDetail

@{
    ViewData["Title"] = "Remove Event Details";
    Layout = "~/Views/Shared/_LayoutWebPage.cshtml";
     var recno = ViewBag.RecNo;
    var eventtitle = ViewBag.EventTitle;
}

<div class="container">
    <h6 id="module-views">@ViewData["Title"] of <u>@eventtitle</u></h6>
</div>
<hr />
<span class="remove-item">Are you sure you want to delete this?</span>
<div class="Form-Body">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.recno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.recno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.speakername)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.speakername)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.eventdate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.eventdate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.venue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.venue)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="recordno" asp-route-eventtitle="@eventtitle" />
        <input type="submit" value="Delete" class="btn btn-danger button-small" /> |
        <a asp-action="Index" asp-route-eventtitle="@eventtitle" asp-route-recno="@Model.recno" class="btn btn-primary button-small">Cancel</a>
    </form>
</div>