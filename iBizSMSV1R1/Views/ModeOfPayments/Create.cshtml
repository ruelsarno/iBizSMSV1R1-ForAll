@model iBizSMSV1R1.Models.ModeOfPayment

@{
    ViewData["Title"] = "Add Mode Of Payment";
    Layout = "~/Views/Shared/_LayoutOtherEntryAccounting.cshtml";
}

<div class="container">
    <h6 id="module-views" class="container">@ViewData["Title"]</h6>
</div>
<hr />
<div class="Form-Body">
    <div class="row">
        <div class="col-sm-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger input-text"></div>
                <div class="form-group">
                    <label asp-for="modeofpayments" class="control-label"></label>
                    <input asp-for="modeofpayments" class="form-control input-text" required/>
                    <span asp-validation-for="modeofpayments" class="text-danger input-text"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="ADD" class="btn btn-warning button-small" />
                </div>

            </form>
        </div>
        <div class="col-sm-12">
            <div class="form-group text-end">
                <a asp-action="Index" class="btn btn-primary button-small">Cancel</a>
            </div>
        </div>
    </div>
</div>