@model iBizSMSV1R1.ViewModels.ResetUserPasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    var message = ViewBag.Message;
    var UserName = ViewBag.UserName;
    var UserID = ViewBag.UserID;

}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <partial name="_AccountSystemSettings" />
        </div>
        <div class="col-sm-12">
            <partial name="_MessageAlert" />
            <h6>@ViewData["Title"]</h6>           
            <div class="col-md-4">
                <form id="profile-form" asp-controller="Account" asp-action="ResetPassword" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="UserId" type="hidden" value="@UserID" />
                    <input asp-for="Code" type="hidden" />
                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control input-text" readonly="readonly" value="@UserName" style="height:38px" />
                        <span asp-validation-for="Username" class="text-danger input-text"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control input-text" style="height:38px" />
                        <span asp-validation-for="Password" class="text-danger input-text"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control input-text" style="height:38px" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger input-text"></span>
                    </div>
                    <label></label><br />
                    <button type="submit" class="btn btn-primary">Reset</button>
                </form>
            </div>
        </div>

    </div>
</div>
