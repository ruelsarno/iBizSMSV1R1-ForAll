@model iBizSMSV1R1.ViewModels.Profile
@{
    ViewData["Title"] = "Change Phone Number";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    var message = ViewBag.Message;
    var UserName = ViewBag.UserName;
    var phonenumber = ViewBag.PhoneNumber;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <partial name="_AccountSystemSettings" />
        </div>
        <div class="col-sm-12">
           
            <partial name="_MessageAlert" />
            
            <h6>@ViewData["Title"]</h6>
            <div class="row">
                <div class="col-md-6">
                    <form id="profile-form" asp-controller="Account" asp-action="ProfilePost" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="UserName"></label>
                            <input asp-for="UserName" class="form-control input-text" readonly value="@UserName" style="height:38px" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber"></label>
                            <input asp-for="PhoneNumber" class="form-control input-text" style="height:38px" value="@phonenumber" />
                            <span asp-validation-for="PhoneNumber" class="text-danger input-text"></span>
                        </div>
                        <label></label><br />
                        <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
