@model iBizSMSV1R1.ViewModels.ApplicationRole

@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h6 id="module-views">@ViewData["Title"]</h6>
</div>
<hr />
<div class="Form-Body">
    <div class="row">
        <div class="col-sm-12">
            <form asp-action="RoleEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="form-group col-sm-12">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control input-text" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-12">
                        <input type="submit" value="SAVE" class="btn btn-info button-small" />
                    </div>
                </div>               
            </form>            
        </div>
        <div class="col-sm-12 text-end">   
                <a asp-action="RoleDelete" asp-route-id="@Model.Id" class="btn btn-danger button-small">DELETE</a> |
                <a asp-action="RoleList" class="btn btn-warning button-small">CANCEL</a>            
        </div>
    </div>

</div>
