@model iBizSMSV1R1.Models.Subject

@{
    ViewData["Title"] = "Remove Subject";
    Layout = "~/Views/Shared/_LayoutClassroomAdmin.cshtml";
}

<div class="container">
    <h6 id="module-views">@ViewData["Title"] : </h6>
</div>
<hr />
<span class="remove-item">Are you sure you want to delete this?</span>
<div class="Form-Body">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.recno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.recno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.studentlevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.studentlevel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.gradeyear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.gradeyear)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.subjectname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.subjectname)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="recno" />
        <input type="submit" value="Delete" class="btn btn-danger button-small" /> |
        <a asp-action="Index" class="btn btn-warning button-small">Cancel</a>
    </form>
</div>
