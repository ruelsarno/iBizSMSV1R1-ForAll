@model iBizSMSV1R1.Models.Section

@{
    ViewData["Title"] = "Add Section";
    Layout = "~/Views/Shared/_LayoutOtherEntryRegistrar.cshtml";
}

<div class="container">
    <h6 id="module-views" class="container">@ViewData["Title"]</h6>
</div>
<hr />
<div class="Form-Body">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger input-text"></div>
        <div class="form-group">
            <label asp-for="gradeyears" class="control-label"></label>
            <select asp-for="gradeyears" asp-items="@ViewBag.GradeYear" class="form-control input-text" required>
                <option></option>
            </select>
            <span asp-validation-for="gradeyears" class="text-danger input-text"></span>
        </div>
        <div class="form-group">
            <label asp-for="sections" class="control-label input-text"></label>
            <input asp-for="sections" class="form-control input-text" required/>
            <span asp-validation-for="sections" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="ADD" class="btn btn-warning button-small" />
        </div>

    </form>
</div>
<div class="col-sm-12">
    <div class="form-group text-end">
        <a asp-action="Index" class="btn btn-primary button-small">Cancel</a>
    </div>
</div>
</div>
</div>