                <div class="row">
                    <div class="form-group  col-sm-4 required">
                        <label asp-for="telephoneno" class="control-label"></label>
                        <input asp-for="telephoneno" class="form-control input-text" />
                        <span asp-validation-for="telephoneno" class="text-danger input-text"></span>
                    </div>
                    <div class="form-group  col-sm-4 required">
                        <label asp-for="cellphoneno" class="control-label"></label>
                        <input asp-for="cellphoneno" class="form-control input-text" />
                        <span asp-validation-for="cellphoneno" class="text-danger input-text"></span>
                    </div>
                    <div class="form-group col-sm-4 required">
                        <label asp-for="emailadd" class="control-label"></label>
                        <input type="email"  asp-for="emailadd" class="form-control input-text" />
