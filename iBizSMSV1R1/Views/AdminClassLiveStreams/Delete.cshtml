@model iBizSMSV1R1.Models.ClassLiveStream

@{
    ViewData["Title"] = "Remove Class Live Streams";
    Layout = "~/Views/Shared/_LayoutClassroomAdmin.cshtml";
    var recno = ViewBag.Recno;
    var subjectname = ViewBag.SubjectName;
}

<div class="container">
    <h6 id="module-views">@ViewData["Title"] : </h6>
</div>
<hr />
<span class="remove-item">Are you sure you want to delete this?</span>
<div class="Form-Body">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.recno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.recno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.subjectname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.subjectname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.lessonno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.lessonno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.lessontitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.lessontitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.videolink)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.videolink)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.active)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.active)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="recordno" />
        <input type="submit" value="Delete" class="btn btn-danger button-small" /> |
        <a asp-action="Index" class="btn btn-primary button-small" asp-route-recno="@recno" asp-route-subjectname="@subjectname">Cancel</a>
    </form>
</div>