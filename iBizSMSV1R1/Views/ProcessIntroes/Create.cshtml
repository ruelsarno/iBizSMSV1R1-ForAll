@model iBizSMSV1R1.Models.ProcessIntro

@{
    ViewData["Title"] = "Add Process Introduction";
    Layout = "~/Views/Shared/_LayoutOtherEntry.cshtml";
}

<div class="container">
    <h6 id="module-views" class="container">@ViewData["Title"]</h6>
</div>
<hr />
<div class="Form-Body">
    <div class="row">
        <div class="col-sm-12">
            <form asp-action="Create" metho>
                <div asp-validation-summary="ModelOnly" class="text-danger input-text"></div>
                <div class="form-group">
                    <label asp-for="title" class="control-label"></label>
                    <input asp-for="title" class="form-control input-text" required />
                    @*<select asp-for="title" asp-items="@ViewBag.WebPageTitle" class="form-control input-text" required>
                        <option></option>
                    </select>*@
                    <span asp-validation-for="title" class="text-danger input-text"></span>
                </div>
                <div class="form-group">
                    <label asp-for="subtitle" class="control-label"></label>
                    <input asp-for="subtitle" class="form-control input-text" required/>
                    <span asp-validation-for="subtitle" class="text-danger input-text"></span>
                </div>
                <div class="form-group">
                    <label asp-for="description" class="control-label"></label>                   
                    <textarea id="description" name="description" class="form-control input-text" required></textarea>
                    @*<input asp-for="description" class="form-control input-text" required />*@
                    <span asp-validation-for="description" class="text-danger input-text"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="ADD" class="btn btn-warning button-small" />
                </div>

            </form>
        </div>
        <div class="col-sm-12">
            <div class="form-group text-end">
                <a asp-action="Index" class="btn btn-primary button-small">Cancel</a>
            </div>
        </div>
    </div>
</div>