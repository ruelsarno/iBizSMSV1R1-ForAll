@model iBizSMSV1R1.Models.WebPageTitles

@{
    ViewData["Title"] = "Edit WebPage Title";
    Layout = "~/Views/Shared/_LayoutWebpage.cshtml";
}

<div class="container">
    <h6 id="module-views">@ViewData["Title"]</h6>
</div>
<hr />
<div class="Form-Body">
    <div class="row">
        <div class="col-sm-12">
            <form asp-action="Edit" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger input-tex"></div>
                <input type="hidden" asp-for="recno" />
                <div class="row">
                    <div class="form-group  col-sm-4 required">
                        <label asp-for="title" class="control-label"></label>
                        <input asp-for="title" class="form-control input-text" />
                        <span asp-validation-for="title" class="text-danger input-text"></span>
                    </div>
                    <div class="form-group  col-sm-4 required">
                        <label asp-for="controller" class="control-label"></label>
                        <input asp-for="controller" class="form-control input-text" />
                        <span asp-validation-for="controller" class="text-danger input-text"></span>
                    </div>
                    <div class="form-group  col-sm-4 required">
                        <label asp-for="action" class="control-label"></label>
                        <input asp-for="action" class="form-control input-text" />
                        <span asp-validation-for="action" class="text-danger input-text"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group  col-sm-9 required">
                        <label asp-for="tagline" class="control-label"></label>
                        <input asp-for="tagline" class="form-control input-text" />
                        <span asp-validation-for="tagline" class="text-danger input-text"></span>
                    </div>
                    <div class="form-group  col-sm-3">
                        <label asp-for="image" class="control-label"></label>
                        <input type="file" id="files" asp-for="image" class="input-text" name="files" multiple>
                        <span asp-validation-for="image" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group  col-sm-12 required">
                        <label asp-for="description" class="control-label"></label>
                        <textarea asp-for="description" class="form-control input-text" id="Description"></textarea>
                        <span asp-validation-for="description" class="text-danger input-text"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-warning  button-small" />
                </div>
            </form>
        </div>
        <div class="col-sm-12">
            <div class="form-group text-end">
                <a asp-action="Delete" asp-route-id="@Model.recno" class="btn btn-danger button-small">Delete</a>
                <a asp-action="Index" class="btn btn-primary button-small">Cancel</a>
            </div>
        </div>
    </div>
</div>

<script>
    tinymce.init({
      selector: 'textarea',
      plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
      toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
      toolbar_mode: 'floating',
      tinycomments_mode: 'embedded',
      tinycomments_author: 'Author name',
    });
</script>