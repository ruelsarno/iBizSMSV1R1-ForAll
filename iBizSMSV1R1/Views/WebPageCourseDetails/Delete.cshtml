@model iBizSMSV1R1.Models.WebPageCourseDetail

@{
    ViewData["Title"] = "Remove Course Details";
    Layout = "~/Views/Shared/_LayoutWebPage.cshtml";
    var recno = ViewBag.RecNo;
    var coursetitle = ViewBag.CourseTitle;
}

<div class="container">
    <h6 id="module-views">@ViewData["Title"] of <u>@coursetitle</u></h6>
</div>
<hr />
<span class="remove-item">Are you sure you want to delete this?</span>
<div class="Form-Body">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.recno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.recno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.aboutthecourse)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.aboutthecourse)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.requirement)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.requirement)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.howtoenroll)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.howtoenroll)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.fees)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fees)
        </dd>
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.image)
        </dd>*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.imagelink)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.imagelink)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="recordno" asp-route-eventtitle="@coursetitle" />
        <input type="submit" value="Delete" class="btn btn-danger button-small" /> |
        <a asp-action="Index" asp-route-coursetitle="@coursetitle" asp-route-recno="@Model.recno" class="btn btn-primary button-small">Cancel</a>
    </form>
</div>