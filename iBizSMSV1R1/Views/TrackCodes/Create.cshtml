@model iBizSMSV1R1.Models.TrackCode

@{
    ViewData["Title"] = "Add Track Codes";
    Layout = "~/Views/Shared/_LayoutOtherEntryRegistrar.cshtml";
}

<div class="container">
    <h6 id="module-views" class="container">@ViewData["Title"]</h6>
</div>
<hr />
<div class="Form-Body">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger input-text"></div>
        <div class="form-group">
            <label asp-for="studentlevels" class="control-label"></label>
            <select asp-for="studentlevels" asp-items="@ViewBag.StudentLevel" class="form-control input-text" required>
                <option></option>
            </select>
            <span asp-validation-for="studentlevels" class="text-danger input-text"></span>
        </div>
        <div class="form-group">
            <label asp-for="trackcodes" class="control-label"></label>
            <input asp-for="trackcodes" class="form-control input-text" required/>
            <span asp-validation-for="trackcodes" class="text-danger input-text"></span>
        </div>
        <div class="form-group">
            <label asp-for="descriptions" class="control-label"></label>
            <input asp-for="descriptions" class="form-control input-text" />
            <span asp-validation-for="descriptions" class="text-danger input-text"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="ADD" class="btn btn-warning button-small" />
        </div>

    </form>
</div>
<div class="col-sm-12">
    <div class="form-group text-end">
        <a asp-action="Index" class="btn btn-primary button-small">Cancel</a>
    </div>
</div>
</div>
</div>